<b id="backdrop" onclick="hide_sidebar()" class="fixed hidden md:hidden bg-black opacity-60 top-0 left-0 right-0 bottom-0 z-30"></b>
<div class="flex min-h-screen dark:bg-gray-900">
    <%= render partial:'partials/aside'%>
    <main class="w-full">
      <%= render partial:'partials/header'%>
	  <%=render "product_detail", {product: @product}%>
	   	<div class="flex flex-wrap gap-3">
			<%=link_to 'Edit', edit_product_path(@product), class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-blue-600 hover:bg-blue-700 font-semibold rounded shadow" %>
			<%=link_to 'Delete',  product_path(@product), 
            	 data: {turbo_method: :delete,
                    turbo_confirm: 'Estas seguro eliminar el producto?'},
                	class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-red-600 hover:bg-red-700 font-semibold rounded shadow"
            %>

		</div>	


    </main>
</div>