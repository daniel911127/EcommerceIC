<b id="backdrop" onclick="hide_sidebar()" class="fixed hidden md:hidden bg-black opacity-60 top-0 left-0 right-0 bottom-0 z-30"></b>
<div class="flex min-h-screen dark:bg-gray-900">
    <%= render partial:'partials/aside'%>
    <main class="w-full">
      <%= render partial:'partials/header'%>
        <section class="bg-gray-50 py-10">
	<div class="container max-w-screen-xl mx-auto px-4">
		<!-- card -->
		<div class="bg-white border border-gray-200 shadow-sm rounded mb-5 p-4 lg:p-8">
			<div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
				<aside>
					<!-- gallery -->
					<div class="border border-gray-200 p-3 text-center rounded mb-5">
                        <%= image_tag 'items/big.jpg', class:"object-cover inline-block"%>
					</div>
				</aside>
				<main>
					 <h2 class="mb-6 lg:mb-10 text-4xl font-semibold font-heading">
						<%= @product.name %>
					</h2>


					<p class="mb-6 lg:mb-10 text-xl text-gray-500">
						<%= @product.description %>
					</p>

                    <div class="mb-10 border rounded-lg">	
               		  <p class ="font-semibold font-heading ">Category</p>
              			
          			</div>

					<div class="flex flex-wrap gap-3">
						<%=link_to 'Edit', edit_product_path(@product), class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-blue-600 hover:bg-blue-700 font-semibold rounded shadow" %>
						<%=link_to 'Delete', destroy_product_path(@product), 
                				data: {turbo_method: :delete,
                          				turbo_confirm: 'Estas seguro eliminar el producto?'},
                				class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-red-600 hover:bg-red-700 font-semibold rounded shadow"
              			%>

					</div>
					<!-- action buttons .//end -->
				</main>
			</div> <!-- grid .// -->
		</div>  <!-- card .// -->
	</div> <!-- container .// -->
</section>

    </main>
</div>