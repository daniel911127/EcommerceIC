<b id="backdrop" onclick="hide_sidebar()" class="fixed hidden md:hidden bg-black opacity-60 top-0 left-0 right-0 bottom-0 z-30"></b>
<div class="flex min-h-screen dark:bg-gray-900">
  <%= render partial:'partials/aside'%>
  <main class="w-full">
    <%= render partial:'partials/header'%>
      <section class="bg-gray-50 py-10">
        <div class="container max-w-screen-xl mx-auto px-4">
          <div class="bg-white border border-gray-200 shadow-sm rounded mb-5 p-4 lg:p-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
              	<aside>
                    <div class="border border-gray-200 p-3 text-center rounded mb-5">
                      <%if @category.image.present?%>
                            <%= image_tag @category.image, class:"object-cover inline-block"%>
                      <%end%>
                    </div>
                </aside>  
                <main>
                  <h2 class="mb-6 lg:mb-10 text-4xl font-semibold font-heading">
						          <%=render @category%>
					        </h2>
                  <div class="flex flex-wrap gap-3">
                    <%= button_to "Destroy this category", @category, method: :delete, class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-red-600 hover:bg-red-700 font-semibold rounded shadow" %>  
                    <%= link_to "Back to categories", categories_path, class:"px-4 py-2 inline-block text-blue-600 border border-gray-300 rounded-md hover:bg-gray-100" %>
                  </div>
                </main>
            </div>  
          </div>
        </div>
      </section>
  </main>
</div>
